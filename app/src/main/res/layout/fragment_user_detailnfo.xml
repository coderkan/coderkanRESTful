<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@android:color/white"
    tools:context="com.eguzeler.rest.fragments.UserDetailnfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >


            <ImageView
                android:id="@+id/big_avatar_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dummy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <RelativeLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/big_avatar_im"
                >
                <TextView
                    android:id="@+id/name_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Name "
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    />

                <TextView
                    android:id="@+id/name_tv"
                    android:text="Erkan GÃ¼zeler"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_hint_tv"
                    android:background="@drawable/border_line"
                    android:textSize="18sp"
                    android:padding="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/job_layout"
                android:layout_below="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/job_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Job "
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/job_tv"
                    android:text="Job"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_hint_tv"
                    android:background="@drawable/border_line"
                    android:textSize="18sp"
                    android:padding="5dp"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_below="@id/job_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/phone_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Phone "
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:padding="5dp"/>

                <EditText
                    android:id="@+id/phone_etv"
                    android:text=""
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_hint_tv"
                    android:background="@drawable/border_line"
                    android:textSize="18sp"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="5dp"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/address_layout"
                android:layout_below="@id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/address_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Address "
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:padding="5dp"/>

                <EditText
                    android:id="@+id/address_etv"
                    android:text="MerkezMahsdfasdf jijsdfjsafdi"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/address_hint_tv"
                    android:background="@drawable/border_line"
                    android:textSize="18sp"
                    android:gravity="top"
                    android:padding="5dp"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/save_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_action_check"
            app:backgroundTint="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            />

    </RelativeLayout>



</FrameLayout>
